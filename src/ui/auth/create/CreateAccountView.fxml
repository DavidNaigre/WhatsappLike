<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="550.0" stylesheets="@CreateAccount.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.auth.create.CreateAccountController">
    <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#005e50" height="106.0" layoutY="-2.0" stroke="BLACK"
               strokeType="INSIDE" strokeWidth="0.0" width="550.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"/>
    <Pane layoutX="54.0" layoutY="29.0" prefHeight="342.0" prefWidth="443.0"
          style="-fx-background-color: #fff; -fx-background-radius: 5px;">
        <Label contentDisplay="CENTER" layoutX="116.0" layoutY="28.0" text="INSCRIPTION" textAlignment="CENTER"/>
        <TextField fx:id="mailField" layoutX="49.0" layoutY="90.0" onKeyReleased="#disableButton" prefHeight="47.0"
                   prefWidth="330.0" promptText="adresse e-mail"/>
        <Text fx:id="errorMessageMail" fill="#dc3545" layoutX="53.0" layoutY="154.0" strokeType="OUTSIDE"
              strokeWidth="0.0" text="Veuillez renseigner une adresse correct" wrappingWidth="330.0">
            <font>
                <Font name="Roboto Regular" size="12.8"/>
            </font>
        </Text>
        <TextField fx:id="pseudoField" layoutX="49.0" layoutY="172.0" onKeyReleased="#disableButton"
                   prefHeight="47.0" prefWidth="330.0" promptText="pseudonyme"/>
        <Text fx:id="errorMessagePseudo" fill="#dc3545" layoutX="49.0" layoutY="233.0" strokeType="OUTSIDE"
              strokeWidth="0.0" text="Veuillez renseigner un pseudonyme correct" wrappingWidth="330.0">
            <font>
                <Font name="Roboto Regular" size="12.8"/>
            </font>
        </Text>
        <HBox alignment="CENTER" layoutX="116.0" layoutY="281.0" prefHeight="41.0" prefWidth="212.0">
            <Hyperlink contentDisplay="CENTER" onAction="#handleBackButtonAction" text="&lt; annuler"/>
            <Button fx:id="transmitButton" mnemonicParsing="false" onAction="#handleCreateAccountButtonAction"
                    prefHeight="21.0" prefWidth="114.0" text="valider">
                <HBox.margin>
                    <Insets left="10.0"/>
                </HBox.margin>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
        </HBox>
        <ProgressBar layoutY="3.0" prefHeight="15.0" prefWidth="435.0" progress="0.27"/>
    </Pane>
</AnchorPane>
